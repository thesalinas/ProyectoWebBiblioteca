{{> headeradmin}}
<div class="banner text-center">

    <h2>Bienvenido al Modulo de Gestion de Noticia</h2>
</div>
{{> admin}}

<section class="info-noticias">

    <div id="Noticia" class="container">
        <h2>Agregar Noticia</h2>
        <div id="noticia" class=" row mb-3">
            <form class="form" method="POST" action="/guardarNoticia">
                <!--<input class="d-none" type="text" name="id">-->

                <label for="">Titulo Noticia</label>
                <input class="form-control" type="text" name="titulo">

                <label for="">Descripcion</label>
                <textarea class="form-control" name="descripcion" rows="3"></textarea>

                <label for="exampleFormControlFile1">Autor</label>
                <input class="form-control" type="text" name="Autor">


                <label for="exampleFormControlFile1">Imagen Noticia</label>
                <input type="file" class="form-control-file" name="imagen">

                <label for="exampleFormControlFile1">Fecha publicacion</label>
                <input type="date" name="fecha">

                <button name="btnAgregar" class="btn btn-primary">Agregar Noticia</button>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="col">
            <h2>Listado de Noticias</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Titulo</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Autor</th>
                            <th scope="col">fecha_pub</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody name="">
                        {{#each noticias}}
                        <tr>
                            <td>{{Titulo}}</td>
                            <td>{{Descripcion}}</td>
                            <td>{{autor}}</td>
                            <td>{{fecha_pub}}</td>
                            <td>{{imagen}}</td>
                            <td>
                                <button onclick="" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                                <button onclick="" class="btn btn-info"><i class="far fa-edit"></i></button> </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>