<body>
    {{>header}}
    <section class="info">
        <div class="mi-flex row">
            <div class="col text-center">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="img-fluid" src="imagenes/U_login.jpg" alt="Producto destacado">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid" src="imagenes/Imagen.png" alt="Producto destacado">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid" src="imagenes/biblioformacion_1.jpg" alt="Producto destacado">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid" src="imagenes/bu_invest.jpg" alt="Producto destacado">
                        </div>
                        <div class="carousel-item">
                            <img class="img-fluid" src="imagenes/Imagen.png" alt="Producto destacado">
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <br>

    <section class="servicios">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-10 text-center">
                    <i class="fas fa-concierge-bell fa-4x"></i>
                    <h2 class="text-center">Ultimas Noticias</h2>
                    <div class="row text-center">
                        {{#each noticias}}
                        <div class="row card text-center" style="width: 20rem;">
                            <img src="{{imagen}}" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5>{{Titulo}}</h5>
                                <div class="texto-noticia">
                                    <p class="des-noti">{{Descripcion}}</p>
                                    <a href="vistas/Noticiaindividual.html" class="btn btn-success">Ir a noticia</a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>
        </div>
        <div class="todas-noticias text-center">
            <a type="button" class="boton-noticias btn btn-success" href="./MostrarNoticias">Ver todas las
                Noticias</a>

        </div>

    </section>

    {{>footer}}
</body>